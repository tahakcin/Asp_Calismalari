Sayfadan sayfaya degisiklik gostermeyen yapilar burada bulunacak.
-->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Basic Bootstrap Layout</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Header Section -->
    <header class="bg-primary text-white p-3">
        <div class="container">
            <h1 class="h3">Site Header</h1>
            <nav>
                <ul class="nav">
                    <li class="nav-item"><a class="nav-link text-white" href="/layout/page1">Page1</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/layout/page2">Page2</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/layout/page3">Page3</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Main Content Section -->
    <main class="container my-5">
        @RenderBody()
        <!--
            Sayfadan sayfaya degisecek kisim RenderBody() fonksiyonu ile gosterilir.
        -->
    </main>
    @RenderSection("icerik", false);
    <!--RenderSection her View icin kullanilmayacaksa false parametresi almalidir.-->
    <!-- Footer Section -->
    <footer class="bg-light text-center p-3">
        <p>&copy; 2024 Your Company. All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


